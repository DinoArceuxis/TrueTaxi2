<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.truetaxi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrueTaxi">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".ProgressBarActivity"
            android:exported="false" />
        <activity
            android:name=".RegistrarTaxiActivity"
            android:exported="false" />
        <activity
            android:name=".SolicitudesActivity"
            android:exported="false" />
        <activity
            android:name=".ListaTaxisActivity"
            android:exported="false" />
        <activity
            android:name=".MisSolicitudesActivity"
            android:exported="false" />
        <activity
            android:name=".SolicitarTaxiActivity"
            android:exported="false" />
        <activity
            android:name=".MisDatosActivity"
            android:exported="false" />
        <activity
            android:name=".MyDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ActivitySplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>